<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>ViewBinder Twitter Bootstrap Admin Template</title>

    <!-- Bootstrap core CSS -->

    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <!-- Add custom CSS here -->
    <link href="~/css/sb-admin.css" rel="stylesheet" />

    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Page Specific CSS -->
    <link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.4.3.min.css">
</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top viewbind" role="navigation" data-viewbind-view="Partials/navigation">   </nav>

        <div id="page-wrapper">

            @RenderBody()

        </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->
    <!-- JavaScript -->
    <script src="~/js/jquery-1.10.2.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/Scripts/ViewBinder/viewbinder.js"></script>
    <script>
   
        viewbinder.init({ rootUrl: "ViewBindRoute/get?viewName=Views/" });
        
        viewbinder.on("loadDashboard", function (e, viewControl, arg) {
            viewControl.reload("mainView=Dashboard/index");
        });
        viewbinder.on("loadCharts", function (e, viewControl, arg) {
            viewControl.reload("mainView=Charts/index");
        });
        viewbinder.on("loadBlank", function (e, viewControl, arg) {
            viewControl.reload("mainView=Blank/index");
        });
        viewbinder.on("loadElements", function (e, viewControl, arg) {
            viewControl.reload("mainView=Elements/index");
        });
        viewbinder.on("loadGrid", function (e, viewControl, arg) {
            viewControl.reload("mainView=grid/index");
        });
        viewbinder.on("loadTables", function (e, viewControl, arg) {
            viewControl.reload("mainView=Tables/index");
        });
        viewbinder.on("loadForms", function (e, viewControl, arg) {
            viewControl.reload("mainView=Forms/index");
        });
        viewbinder.on("loadTypography", function (e, viewControl, arg) {
            viewControl.reload("mainView=Typography/index");
        });
       
    </script>

    <!-- Page Specific Plugins -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="http://cdn.oesmith.co.uk/morris-0.4.3.min.js"></script>
    <script src="~/js/morris/chart-data-morris.js"></script>
    <script src="~/js/tablesorter/jquery.tablesorter.js"></script>
    <script src="~/js/tablesorter/tables.js"></script>

   
</body>
</html>


